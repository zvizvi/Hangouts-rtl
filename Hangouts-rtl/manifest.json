{
	"update_url": "https://clients2.google.com/service/update2/crx",
	"manifest_version": 2,
	"name": "Hangouts RTL",
	"description": "Extension tats fix Google Hangouts direction to RTL. \nUseful for RTL languages (like Hebrew, Arabic etc.).",
	"version": "0.0.4",
	"author": "zvizvi5@outlook.com",
	"permissions": [
		"http://*/*",
		"https://*/*"
	],
	"icons": {
		"48": "images/icon_48.png",
		"128": "images/icon_128.png"
	},
	"browser_action": {
		"default_icon": {
			"16": "images/icon_16.png",
			"22": "images/icon_22.png",
			"24": "images/icon_24.png",
			"32": "images/icon_32.png",
			"44": "images/icon_44.png"
		}
	},
	"content_scripts": [
		{
			"js": [
				"js/main.js"
			],
			"matches": [
				"http://*/*",
				"https://*/*"
			],
			"run_at": "document_end",
			"all_frames": true
		}
	]
}
